package org.sui;

import java.util.List;

import org.junit.Test;
import org.junit.runner.JUnitCore;
import org.junit.runner.Result;
import org.junit.runner.notification.Failure;

public class Suiterunnerclass {
@Test
public void tc() {
	Result rc = JUnitCore.runClasses(B.class, junitchallenge.class, A.class);

	System.out.println("Total tset case run counr:" + rc.getRunCount());
	System.out.println("Total test case run time:" + rc.getRunTime());
	System.out.println("Total test case run failure count:" + rc.getFailureCount());
	System.out.println("Total test case count:" + rc.getIgnoreCount());
	
	List<Failure> f = rc.getFailures();
	
	for (Failure fails: f) {
		System.out.println(fails);
	}
}
}
